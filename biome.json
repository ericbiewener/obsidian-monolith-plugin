{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"include": ["**/*.ts", "**/*.js", "**/*.json"],
		"ignore": ["node_modules", "dist", "*.module.css.d.ts"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"noUnusedTemplateLiteral": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"nursery": {
				"noUnusedImports": "error"
			}
		}
	}
}
